<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel"><%=t :edit_membership %></h4>
</div>
<%= bootstrap_horizontal_form_for [@organization, @membership], :html => {:target => "_parent"} do |f| %>
    <div class="modal-body" style="overflow-y: scroll; width: 100%; height: 400px; padding: 10px 20px;">

        <% label_col = 3
           field_col = 7 %>
        <div class="form-group">
            <%= f.label :admin, :col_sm => label_col %>
            <%= f.check_box :admin, :col_sm => field_col %>
        </div>
    </div>

    <div class="modal-footer">
        <%= link_to t(:delete_membership), [@organization, @membership], :method => "DELETE", :class => "btn btn-danger pull-left" %>
        <button type="button" class="btn btn-default" data-dismiss="modal"><%=t :close %></button>
        <%= f.submit t :edit_membership %>
    </div>
<% end %>

<%= javascript_tag do %>
    $(document).ready(function() {
        $("[data-dismiss='modal']").click(function(){
            window.parent.$(".modal").modal('hide');
        });
    });
<% end %>